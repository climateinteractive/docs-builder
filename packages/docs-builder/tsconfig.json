// This contains the TypeScript configuration used only for the `builder` script.
{
  "compilerOptions": {
    // Use "es2021" for `replaceAll` (includes "es2015" for for `Map` and `IterableIterator`)
    "target": "es2021",
    // Use "es2020" because this is a Node module (using ESM)
    "module": "es2020",
    "esModuleInterop": true,
    // Enable strict enforcement of `import type`
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    // We specify the top-level directory as the root, since TypeScript requires
    // all referenced files to live underneath the root directory
    "rootDir": "..",
    // Make `paths` in the tsconfig files relative to this package directory
    "baseUrl": ".",
    // Configure path aliases
    "paths": {}
  }
}
